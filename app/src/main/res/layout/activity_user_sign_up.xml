<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSignUpActivity">

<!--    Text of User Authentication-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Authentication"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/txtUserAuthSignIn"/>

    <!--    Text of sign Up to Continue-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Sign Up to Continue"
        android:layout_below="@id/txtUserAuthSignIn"
        android:padding="20dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:id="@+id/txtSignUp"/>

    <!--    Image of User Sign up-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_sign_up"
        android:layout_below="@+id/txtSignUp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgSignUp"/>

    <!--    Editable text field for Email-->
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/imgSignUp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editTxtEmail"/>

    <!--    Editable text field for Password-->
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@+id/editTxtEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/editTxtPassword"/>

    <!--    Button for Sign Up-->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!--    Text of Signed Up before-->

    <!--    Clickable text for Log In-->

    <TextView
        android:id="@+id/txtLogInBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="52dp"
        android:text="Have You Signed Up Before?"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtBtnLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLogInBefore"
        android:layout_alignBottom="@+id/txtLogInBefore"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="-64dp"
        android:text="Log In"
        android:textColor="@color/blue"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>